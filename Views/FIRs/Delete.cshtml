@model WebApplication1.Models.FIRViewModel

@{
    ViewData["Title"] = "Delete FIR";
    var userRole = ViewBag.UserRole as string ?? "Guest";

    // Redirect if user is not Police
    if (userRole != "Police")
    {
        <text>
            <script>
                window.location.href = '@Url.Action("Index", "Home")';
            </script>
        </text>
        return;
    }
}

<h2>Delete FIR</h2>

<h4>Are you sure you want to delete this FIR?</h4>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Contact No:</strong> @Model.ContactNo</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Complaint Type:</strong> @Model.ComplaintType</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
