@model WebApplication1.Models.CreateThiefViewModel

@{
    ViewData["Title"] = "Create Thief";
    var userRole = ViewBag.UserRole as string ?? "";
}

@if (userRole == "Police")
{
    <h2>Create Thief</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ThiefPlaceAsOfNow" class="form-label"></label>
            <input asp-for="ThiefPlaceAsOfNow" class="form-control" />
            <span asp-validation-for="ThiefPlaceAsOfNow" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdmittedTime" class="form-label"></label>
            <input asp-for="AdmittedTime" type="date" class="form-control" />
            <span asp-validation-for="AdmittedTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ReleaseTime" class="form-label"></label>
            <input asp-for="ReleaseTime" type="date" class="form-control" />
            <span asp-validation-for="ReleaseTime" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
}
else
{
    <script>
        // Redirect unauthorized users to Home page
        window.location.href = '@Url.Action("Index", "Home")';
    </script>
}
